{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div class="main white container">
        <div class="row">
            <div class="col-md-12">
                <h1>The Gracious Patrons</h1>

                <p class="lead">RingsDB wouldn't be the same without them. Many, many thanks.</p>

                <p>To show our appreciation, the content of the site is free of ads for Patrons.</p>

                <p>
                    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                        <input type="hidden" name="cmd" value="_s-xclick">
                        <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----">
                        To become a Patron and help run the site, you can use <button type="submit" class="btn btn-link paypal">PayPal</button>.
                    </form>
                </p>

                <ul>
                    {% for patron in patrons %}
                        <li>
                            <a href="{{ path('user_profile_public', { user_id: patron.id, user_name: patron.username | e('url')}) }}" class="username fg-{{ patron.color }}">{{ patron.username }}</a>
                            <span class="fa fa-gift patron" title="RingsDB Patron"></span>
                        </li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>
{% endblock %}
