{% extends 'AppBundle:Search:display.html.twig' %}
{% import "AppBundle::macros.html.twig" as macros %}

{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/ui.card.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        app.user.params.card_id = {{ cards ? cards[0].id : null }};
    </script>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                {% for card in cards %}
                    <div class="col-sm-6 col-sm-offset-1" style="margin-bottom:2em">
                        <div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">{% include 'AppBundle:Search:card-name.html.twig' %}</h3>
                                </div>
                                <div class="panel-body card-content">
                                    {% include 'AppBundle:Search:card-info.html.twig' %}
                                    {% include 'AppBundle:Search:card-text.html.twig' %}
                                    {% include 'AppBundle:Search:card-flavor.html.twig' %}
                                    {% include 'AppBundle:Search:card-illustrator.html.twig' %}
                                    {% include 'AppBundle:Search:card-pack-sphere.html.twig' %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4" style="margin-bottom:2em">
                        <div>
                            {% if card.imagesrc %}
                                <img src="{{ card.imagesrc }}" alt="{{ card.name }}" class="img-responsive card-full-image" style="margin:auto">
                            {% else %}
                                <div class="no-image" style="margin:auto">
                                    <div class="no-image-text">No image</div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    {% if includeReviews %}
                        {% include 'AppBundle:Search:display-card-reviews.html.twig' %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

